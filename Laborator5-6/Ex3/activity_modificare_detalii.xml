<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_blue"
    tools:context=".ModificareDetalii">

    <include layout="@layout/modificare_detalii"
        android:id="@+id/layoutCardview"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/layoutCardview"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:padding="20dp">
        <EditText
            android:id="@+id/textNume"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Nume"
            android:inputType="textPersonName"
            android:textColor="@color/black"
            android:padding="10sp"
            android:background="@drawable/forma_background_input"
            android:layout_marginTop="7dp"
            android:layout_marginHorizontal="20dp"
            android:drawableStart="@drawable/nume_icon"
            />
        <EditText
            android:id="@+id/textPrenume"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Prenume"
            android:inputType="textPersonName"
            android:textColor="@color/black"
            android:padding="10sp"
            android:background="@drawable/forma_background_input"
            android:layout_marginTop="7dp"
            android:layout_marginHorizontal="20dp"
            android:drawableStart="@drawable/nume_icon"
            />
        <EditText
            android:id="@+id/textTelefon"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Telefon"
            android:inputType="phone"
            android:textColor="@color/black"
            android:padding="10sp"
            android:background="@drawable/forma_background_input"
            android:layout_marginTop="7dp"
            android:layout_marginHorizontal="20dp"
            android:drawableStart="@drawable/telefon_icon"
            />
        <EditText
            android:id="@+id/textAdresa"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Adresa"
            android:inputType="textLongMessage"
            android:textColor="@color/black"
            android:padding="10sp"
            android:background="@drawable/forma_background_input"
            android:layout_marginTop="7dp"
            android:layout_marginHorizontal="20dp"
            android:drawableStart="@drawable/baseline_home_24"
            />
        <EditText
            android:id="@+id/textEmail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:textColor="@color/black"
            android:padding="10sp"
            android:background="@drawable/forma_background_input"
            android:layout_marginTop="7dp"
            android:layout_marginHorizontal="20dp"
            android:drawableStart="@drawable/email_icon"
            />
    </LinearLayout>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/modificareFloatingBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:backgroundTint="@color/blue"
        android:elevation="5dp"
        android:onClick="creareContact"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/modificare_icon"
        app:pressedTranslationZ="10dp" />
</androidx.constraintlayout.widget.ConstraintLayout>
