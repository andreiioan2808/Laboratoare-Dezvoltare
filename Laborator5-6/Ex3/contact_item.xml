<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/layout_contacte">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:paddingTop="2dp"
            android:paddingBottom="2dp">

            <TextView
                android:id="@+id/numeContactItem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:paddingBottom="10dp"
                android:text="Nume"
                android:textColor="@color/white"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/prenumeContactItem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:paddingBottom="10dp"
                android:text="Prenume"

                android:textColor="@color/white"
                android:textSize="20dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/telefonContactItem"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginVertical="1dp"
            android:padding="10dp"
            android:paddingBottom="10dp"
            android:text="Telefon"
            android:textColor="@color/white"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/emailContactItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="1dp"
            android:padding="10dp"
            android:paddingBottom="10dp"
            android:text="Email"
            android:textColor="@color/white"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/adresaContactItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="1dp"
            android:padding="10dp"
            android:paddingBottom="10dp"
            android:text="Adresa"
            android:textColor="@color/white"
            android:textSize="20dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/imBtnApelare"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:contentDescription="@string/apelare"
                app:srcCompat="@drawable/baseline_call_24" />

            <ImageButton
                android:id="@+id/imgBtnEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:contentDescription="@string/apelare"
                app:srcCompat="@drawable/email_icon30" />

            <ImageButton
                android:id="@+id/imgBtnModificare"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:contentDescription="@string/editare"
                app:srcCompat="@drawable/edit_icon30" />

        </LinearLayout>

    </LinearLayout>
</RelativeLayout>